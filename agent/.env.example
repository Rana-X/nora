# ===========================================
# LiveKit Configuration
# ===========================================
# Get these from https://cloud.livekit.io
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ===========================================
# OpenAI Configuration (LLM Brain)
# ===========================================
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# Deepgram Configuration (STT - Speech to Text)
# ===========================================
# Get from https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key

# ===========================================
# Cartesia Configuration (TTS - Text to Speech)
# ===========================================
# Get from https://play.cartesia.ai
CARTESIA_API_KEY=your_cartesia_api_key

# ===========================================
# Beyond Presence Configuration (Avatar)
# ===========================================
# Get from https://beyondpresence.ai
BEYOND_PRESENCE_API_KEY=your_beyond_presence_api_key
BEY_AVATAR_ID=your_avatar_id
